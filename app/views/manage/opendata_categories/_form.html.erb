<%= simple_form_for [:manage, @opendata_category] do |f| %>
  <%= f.input :title, :autofocus => true %>

  <div class='actions'>
    <%= f.submit 'Сохранить' %>
    <%= link_to 'Отмена', manage_opendata_categories_path %>
    <%= link_to 'удалить', manage_opendata_category_path(@opendata_category), :method => :delete, :confirm => 'Вы уверены?', :class => :floatr unless @opendata_category.new_record? %>
  </div>
<% end %>
