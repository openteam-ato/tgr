<% content_for :extend_javascripts do %>
<% end %>

<% content_for :content do %>

  <div class="blue_pages">

    <% if @links %>
      <div class="links">
        <h3>Ссылки</h3>
        <%= raw @links.content.body.html_safe %>
        <div class="right_side_bottom"></div>
      </div>
    <% end %>

    <% if @content_first.present? %>
      <%= render :partial => 'commons/experts_council_employees', :locals => { :object => @content_first.content } if @content_first.content.items %>
      <% if @content_first.content.subdivisions %>
        <h2>Подразделения</h2>
        <%= render :partial => 'commons/subdivisions', :locals => { :object => @content_first.content } %>
      <% end %>
    <% end %>
    <%= render :partial => 'regions/reports_part', :locals => { :reports => @reports } if @reports.present? %>
    <%= render :partial => 'regions/dependent_subdivisions', :locals => { :object => @dependent_subdivisions } if @dependent_subdivisions.present? %>

    <%= render 'commons/social_links' %>
  </div>
<% end %>
