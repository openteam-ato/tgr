<% content_for :content do %>

  <%= content_tag :div, render(:partial => 'regions/right_side'), :class => 'right_side' if @right_side_navigation || @twitter %>
  <div class="article">
    <%= render_partial_for_region(@content_first) if @content_first %>
    <%= render_partial_for_region(@news) if @news %>
    <%= render_partial_for_region(@comments) if @comments %>
    <%= render_partial_for_region(@smi_publications) if @smi_publications %>
  </div>
<% end %>

<%= render :template => 'layouts/application' %>
