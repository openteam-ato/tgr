<div class="actual_and_calendar">
  <div class="inner">
    <div class="actual">
      <ul class="switcher">
        <li>
          <%= image_tag 'inotomsk.jpg',
            :'data-title' => "<a href='http://inotomsk.ru/' target='_blank'>Инновационный портал Томской области<br />&laquo;ИНО ТОМСК: инновации, наука, образование&raquo;</a>",
            :size => "618x348" %>
        </li>
        <li>
          <%= image_tag 'gubernator.jpg',
            :'data-title' => "<a href='http://gubernator.tomsk.ru/' target='_blank'>Сайт губернатора Томской области Сергея Жвачкина</a>",
            :size => "618x348" %>
        </li>
        <% @actual.content['items'].reverse.each_with_index do |item, index| %>
          <% if index == 1 %>
          <% end %>
          <li>
            <%= image_tag item.images.first.thumbnail.url,
              :"data-title" => "<a href='#{item.link}'>#{item.title.gsub('–', '-').gilensize}</a>",
              :alt => item.images.first.thumbnail.description,
              :size => "618x348" %>
          </li>
        <% end if @actual.content['items'].present? %>
        <li>
          <%= image_tag 'young-scientist.jpg',
            :'data-title' => "<a href='http://www.u-novus.ru/' target='_blank'>Первый форум молодых ученых России – 2014</a>",
            :size => "618x348" %>
        </li>
      </ul>
    </div>

    <div class="calendar">
      <div class="calendar_head">
        <%= link_to 'Календарь мероприятий', @calendar_gone.content.collection_link %>
        <%= link_to 'RSS-канал календаря мероприятий', @calendar_gone.content.rss_link, :class => 'rss' %>
      </div>
      <div class="calendar_items">
        <div class="scrollbar"><div class="track"><div class="thumb"><div class="end"></div></div></div></div>
        <div class="viewport">
          <ul class="overview">
            <% if @calendar_current.content.items.present? %>
              <% @calendar_current.content.items.each do |item| %>
                <%= render :partial => 'commons/calendar_item', :locals => { :item => item } %>
              <% end %>
            <% else %>
              <li class="empty">Нет актуальной информации</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
