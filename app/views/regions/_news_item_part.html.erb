<div class="date">
  <%= l object.since.to_date, :format => :long %>
</div>

<%= raw object.annotation %>

<%= image_tag object.images.first.thumbnail.url, :alt => object.images.first.description, :width => object.images.first.thumbnail.width, :height => object.images.first.thumbnail.height, :class => 'floatl' if object.images.any? %>
<%= raw object.body %>

<% if object.source.present? %>
  <div class="source">
    Источник: <%= link_to object.source, object.source_link %>
  </div>
<% end %>

<div class="more_like_this">
  <% object.more_like_this.each do |item| %>
    <%= item %>
  <% end if object.more_like_this %>
</div>

<% if object.images.any? && object.images.count > 1 %>
  <div class="galleria_wrapper">
    <div id="galleria">
      <% object.images.each do |image| %>
        <%= galleria_link(image) %>
      <% end %>
    </div>
  </div>
<% end %>
